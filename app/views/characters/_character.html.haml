.row
  - unless character.name.nil?
    .character-stat.small-12.columns
      %h2= character.name
    .character-stat.small-6.columns
      %span= "Sex: #{character.sex}"
  .character-stat.small-6.columns
    %span= "Race: #{character.race.name}"
  .character-stat.small-6.columns
    %span= "Class: #{character.dd_class.name}"

  -unless character.alignment.nil?
    .character-stat.small-6.columns
      %span= "Alignment: #{character.alignment}"
    .character-stat.small-6.columns
      %span= "Height: #{character.height} in."
    .character-stat.small-6.columns
      %span= "Weight: #{character.weight} lbs."
.row
  - unless character.str.nil?
    .small-12.large-6.columns
      %table
        %thead
          %tr
            %th Abilities
            %th
        %tbody
          %tr
            %td Strength
            %td= character.str
          %tr
            %td Dexterity
            %td= character.dex
          %tr
            %td Constitution
            %td= character.const
          %tr
            %td Intelligence
            %td= character.int
          %tr
            %td Wisdom
            %td= character.wis
          %tr
            %td Charisma
            %td= character.cha

  - unless character.climb.nil?
    .small-12.large-6.columns
      %table
        %thead
          %tr
            %th Skills
            %th
        %tbody
          - skills.each do |s|
            %tr
              %td= s.name
              %td= character[(s.name.downcase.tr(" ", "_").to_sym)]
.row
  -unless character.background == "" || character.background.nil?
    .small-12.large-6.columns
      %table
        %thead
          %th Background
        %tbody
        %tr
          %td= character.background

  -unless character.personality == "" || character.personality.nil?
    .small-12.large-6.columns
      %table
        %thead
          %th Personality
        %tbody
          %tr
            %td= character.personality

  -unless character.appearance == "" || character.background.nil?
    .small-12.large-6.columns
      %table
        %thead
          %th Appearance
        %tbody
          %tr
            %td= character.appearance